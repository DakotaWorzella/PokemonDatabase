@model IEnumerable<PokemonDatabase.DataAccess.Models.User>;
@{
    Layout = "_Layout";
}

<div class="userTable">
    @if(Model.Where(x => x.IsOwner == false).Count() > 0)
    {
        <table class="table">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Is Admin</th>
                <th scope="col">Actions</th>
            </tr>
            @foreach(var item in Model.Where(x => x.IsOwner == false))
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.IsAdmin</td>
                    <td>
                        <a href="@Url.Action("EditUser", "Owner", new { id = item.Id })">Edit</a>
                        |
                        @if(item.IsArchived == false)
                        {
                            <a href="@Url.Action("DeleteUser", "Owner", new { id = item.Id })">Delete</a>
                        }
                        else
                        {
                            <a href="@Url.Action("RestoreUser", "Owner", new { id = item.Id })">Restore</a>
                        }
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="noUsers">There are no users at all!</div>
    }
</div>