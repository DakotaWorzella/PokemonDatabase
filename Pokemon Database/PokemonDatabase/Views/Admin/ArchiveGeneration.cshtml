@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model PokemonDatabase.DataAccess.Models.Generation
@{
    Layout = "_Layout";
}

<h2>Archive Generation Confirm</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.Region):
            @Html.DisplayFor(x => x.Region, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Games):
            @Html.DisplayFor(x => x.Games, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-danger" role="button">Archive</button>
        </p>
    }

</div>