@model PokemonDatabase.Models.GenerationViewModel;
@{
    Layout = "_Layout";
}

<div class="generationTable">
    @if(User.IsInRole("Owner"))
    {
        <p>
            <a class="btn btn-primary" href="@Url.Action("AddGeneration", "Owner")" role="button">Add Generation</a>
        </p>
    }
    <table class="table">
        <tr>
            <th scope="col">Generation ID</th>
            <th scope="col">Region</th>
            <th scope="col">Game(s) of Origin</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach(var item in Model.AllGenerations)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Region</td>
                <td>
                    @item.Games (@item.Abbreviation)
                    @if (item.IsArchived == true)
                    {
                        @("(Archived)")
                    }
                </td>
                <td>
                    <a href="@(Url.Action("EditGeneration", "Admin", new { id = item.Id }))">Edit</a>
                    @if(!Model.AllPokemon.Exists(x => x.Generation.Id == item.Id))
                    {
                        @("|")
                        @if(!item.IsArchived)
                        {
                            <a href="@(Url.Action("ArchiveGeneration", "Admin", new { id = item.Id }))">Archive</a>
                        }
                        else
                        {
                            <a href="@(Url.Action("UnarchiveGeneration", "Admin", new { id = item.Id }))">Unarchive</a>
                        }
                    }
                    @if(User.IsInRole("Owner"))
                    {
                        @('|')
                        <a href="@(Url.Action("DeleteGeneration", "Owner", new { id = item.Id }))">Delete</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>