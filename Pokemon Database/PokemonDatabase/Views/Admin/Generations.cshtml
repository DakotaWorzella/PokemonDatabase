@model PokemonDatabase.Models.GenerationViewModel;
@{
    Layout = "_Layout";
}

<div class="generationTable">
    <p>
        <a class="btn btn-primary" href="@Url.Action("AddGeneration", "Admin")" role="button">Add Generation</a>
    </p>
    <table class="table">
        <tr>
            <th scope="col">Generation ID</th>
            <th scope="col">Region</th>
            <th scope="col">Game(s) of Origin</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach(var item in Model.AllGenerations)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Region</td>
                <td>
                    @item.Games (@item.Abbreviation)
                    @if (item.IsArchived == true)
                    {
                        @("(Deleted)")
                    }
                </td>
                <td>
                    <a href="@(Url.Action("EditGeneration", "Admin", new { id = item.Id }))">Edit</a>
                    @if(!Model.AllPokemon.Exists(x => x.Generation.Id == item.Id))
                    {
                        @("|")
                        @if(item.IsArchived == false)
                        {
                            <a href="@(Url.Action("DeleteGeneration", "Admin", new { id = item.Id }))">Delete</a>
                        }
                        else
                        {
                            <a href="@(Url.Action("RestoreGeneration", "Admin", new { id = item.Id }))">Restore</a>
                        }
                    }
                </td>
            </tr>
        }
    </table>
</div>