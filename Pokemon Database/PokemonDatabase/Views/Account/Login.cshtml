@model PokemonDatabase.Models.LoginViewModel
@{
    Layout = "_Layout";
}

<h2>Login</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Username)
            @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Username)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        @Html.ValidationSummary()

        <p>
            <button type="submit" class="btn btn-primary" role="button">Login</button>
             <a href="@(Url.Action("Register", "Account"))">Create new account</a>
        </p>
    }
    
</div>