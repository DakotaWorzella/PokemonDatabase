@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.User
@{
    Layout = "_layout";
}

<h2>Update User</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.PasswordHash)
        
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(x => x.FirstName)
            @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.LastName)
            @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.LastName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Username)
            @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Username)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.EmailAddress)
            @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.EmailAddress)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.IsAdmin)
            @Html.EditorFor(x => x.IsAdmin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.IsAdmin)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Save</button>
        </p>
    }

</div>