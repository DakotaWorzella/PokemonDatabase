@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.Suggestion
@{
    Layout = "_Layout";
}

<h2>Conplete Suggestion</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.Commentor)
        @Html.HiddenFor(x => x.IsCompleted)
        @Html.HiddenFor(x => x.Name)

        <div class="form-group">
            @Html.LabelFor(x => x.Name):
            @Html.DisplayFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Complete</button>
        </p>
    }

</div>