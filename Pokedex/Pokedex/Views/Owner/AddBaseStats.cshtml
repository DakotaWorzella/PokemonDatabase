@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.BaseStat
@{
    Layout = "_layout";
}

<h2>Add Base Stat</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        @Html.HiddenFor(x => x.PokemonId)

        <div class="form-group">
            @Html.LabelFor(x => x.Health)
            @Html.EditorFor(x => x.Health, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Health)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Attack)
            @Html.EditorFor(x => x.Attack, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Attack)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Defense)
            @Html.EditorFor(x => x.Defense, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Defense)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.SpecialAttack)
            @Html.EditorFor(x => x.SpecialAttack, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SpecialAttack)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.SpecialDefense)
            @Html.EditorFor(x => x.SpecialDefense, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SpecialDefense)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Speed)
            @Html.EditorFor(x => x.Speed, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Speed)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    }

</div>