@model IEnumerable<Pokedex.DataAccess.Models.Suggestion>;
@{
    Layout = "_Layout";
}

@section styles
{
    <link href="/css/tabContent.css" rel="stylesheet" type="text/css" />
    <style>
        .tabcontent th {
            text-align: left !important;
        }
    </style>
}

@section scripts
{
    <script src="/js/tabContent.js"></script>
}

<div class="tab-list">
    <button class="tab active" onclick="openPage(event, 'incomplete')">Incompleted Suggestions</button>
    <button class="tab" onclick="openPage(event, 'completed')">Completed Suggestions</button>
</div>
<div class="tabcontent active" id="incomplete">
    @if(Model.Where(x => !x.IsCompleted).ToList().Count() > 0)
    {
        <table class="table">
            <tr>
                <th scope="col">Suggestion</th>
                <th scope="col">Suggested By</th>
                <th scope="col">Actions</th>
            </tr>
            @foreach(var item in Model.Where(x => !x.IsCompleted))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Commentor</td>
                    <td><a class="btn btn-primary" href="@Url.Action("CompleteSuggestion", "Owner", new { id = @item.Id })">Complete Action</a></td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="noUsers">There are no suggestions at all!</div>
    }
</div>
<div class="tabcontent" id="completed">
    @if(Model.Where(x => !x.IsCompleted).ToList().Count() > 0)
    {
        <table class="table">
            <tr>
                <th scope="col">Suggestion</th>
                <th scope="col">Suggested By</th>
            </tr>
            @foreach(var item in Model.Where(x => x.IsCompleted))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Commentor</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="noUsers">There are no suggestions at all!</div>
    }
</div>