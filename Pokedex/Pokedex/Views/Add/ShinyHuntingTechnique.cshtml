@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.ShinyHuntingTechnique
@{
    Layout = "_layout";
}

<h2>Add Shiny Hunting Technique</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        <div class="form-group row">
            @Html.LabelFor(x => x.Name, new { @class = "col-md-2" }):
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.Technique, new { @class = "col-md-2" }):
            @Html.EditorFor(x => x.Technique, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.Technique)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    }

</div>