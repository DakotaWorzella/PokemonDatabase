@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.AlternateFormViewModel
@{
    Layout = "_layout";
}

<h2>Add Pokemon</h2>

<div class="form-horizontal">

    @using (Html.BeginForm(FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.Label("Picture")
            <div class="col-md-8">
                <input type="file" id="Picture" name="upload" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.OriginalPokemonId)
            @Html.DropDownListFor(x => x.OriginalPokemonId, new SelectList(Model.AllPokemon, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.OriginalPokemonId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.FormId)
            @Html.DropDownListFor(x => x.FormId, new SelectList(Model.AllForms, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.FormId)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.GenerationId)
            @Html.DropDownListFor(x => x.GenerationId, new SelectList(Model.AllGenerations, "Id", "Games"), new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GenerationId)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Height)
            @Html.EditorFor(x => x.Height, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Height)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Weight)
            @Html.EditorFor(x => x.Weight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Weight)
        </div>   

        <div class="form-group">
            @Html.LabelFor(x => x.ExpYield)
            @Html.EditorFor(x => x.ExpYield, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.ExpYield)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    }

</div>