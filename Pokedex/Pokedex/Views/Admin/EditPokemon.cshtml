@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.Pokemon
@{
    Layout = "_layout";
}

<h2>Update Pokemon</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {      
        @Html.AntiForgeryToken()

        @Html.HiddenFor(x => x.ClassificationId)
        @Html.HiddenFor(x => x.EggCycleId)
        @Html.HiddenFor(x => x.GenerationId)
        @Html.HiddenFor(x => x.ExperienceGrowthId)
        @Html.HiddenFor(x => x.CaptureRateId)
        @Html.HiddenFor(x => x.GenderRatioId)
        @Html.HiddenFor(x => x.BaseHappinessId)

        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(x => x.Id)
            @Html.EditorFor(x => x.Id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Id)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Height)
            @Html.EditorFor(x => x.Height, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Height)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Weight)
            @Html.EditorFor(x => x.Weight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Weight)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ExpYield)
            @Html.EditorFor(x => x.ExpYield, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.ExpYield)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Save</button>
        </p>
    }

</div>