@model Pokedex.Models.FormViewModel;
@{
    Layout = "_Layout";
}

<div class="abilityTable">
    @if(User.IsInRole("Owner"))
    {
        <p>
            <a class="btn btn-primary" href="@Url.Action("Form", "Add")" role="button">Add Form</a>
        </p>
    }
    <table class="table">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach(var item in Model.AllForms)
        {
            <tr>
                <td>
                    @item.Name
                    @if(item.IsArchived == true)
                    {
                        @("(Archived)")
                    }
                </td>
                <td>
                    <a href="@(Url.Action("Form", "Edit", new { id = item.Id }))">Edit</a>
                    @if(!(Model.AllPokemon.Exists(x => x.FormId == item.Id)))
                    {
                        @('|')
                        @if(!item.IsArchived)
                        {
                            <a href="@(Url.Action("Form", "Archive", new { id = item.Id }))">Archive</a>
                        }
                        else
                        {
                            <a href="@(Url.Action("Form", "Unarchive", new { id = item.Id }))">Unarchive</a>
                        }
                        @if(User.IsInRole("Owner"))
                        {
                            @('|')
                            <a href="@(Url.Action("Form", "Delete", new { id = item.Id }))">Delete</a>
                        }
                    }
                </td>
            </tr>
        }
    </table>
</div>