@model Pokedex.Models.ShinyHuntViewModel;
@{
    Layout = "_Layout";
}

<div class="typeTable">
    @if (this.User.IsInRole("Owner"))
    {
        <p>
            <a class="btn btn-primary" href="@this.Url.Action("ShinyHuntingTechnique", "Add")" role="button">Add Shiny Hunting Technique</a>
        </p>
    }
    <table class="table">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Technique</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach (var item in Model.AllShinyHuntingTechniques)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>@item.Technique</td>
                <td>
                    <a href="@(this.Url.Action("ShinyHuntingTechnique", "Edit", new { id = item.Id }))">Edit</a>
                    @if (!(Model.AllShinyHunters.Exists(x => x.ShinyHuntingTechnique.Id == item.Id)))
                    {
                        @('|')
                        <a href="@(this.Url.Action("ShinyHuntingTechnique", "Delete", new { id = item.Id }))">Delete</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>