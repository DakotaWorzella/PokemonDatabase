@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.PokemonTeamViewModel
@{
    Layout = "_Layout";
}

<h2>Delete Team "@Model.PokemonTeamName"</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.PokemonTeamName):
            @Html.DisplayFor(x => x.PokemonTeamName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="pokemonList">
            @if(@Model.FirstPokemon != null)
            {
                <img class="lightshadowed pokemonTeamPokemon" title="@Model.FirstPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @Model.FirstPokemon.Pokemon.Id + ".png")" />
            }

            @if(@Model.SecondPokemon != null)
            {
                <img class="lightshadowed pokemonTeamPokemon" title="@Model.SecondPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @Model.SecondPokemon.Pokemon.Id + ".png")" />
            }
            
            @if(@Model.ThirdPokemon != null)
            {
                <img class="lightshadowed pokemonTeamPokemon" title="@Model.ThirdPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @Model.ThirdPokemon.Pokemon.Id + ".png")" />
            }
            
            @if(@Model.FourthPokemon != null)
            {
                <img class="lightshadowed pokemonTeamPokemon" title="@Model.FourthPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @Model.FourthPokemon.Pokemon.Id + ".png")" />
            }
            
            @if(@Model.FifthPokemon != null)
            {
                <img class="lightshadowed pokemonTeamPokemon" title="@Model.FifthPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @Model.FifthPokemon.Pokemon.Id + ".png")" />
            }
            
            @if(@Model.SixthPokemon != null)
            {
                <img class="lightshadowed pokemonTeamPokemon" title="@Model.SixthPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @Model.SixthPokemon.Pokemon.Id + ".png")" />
            }
        </div>

        <br>

        <p>
            <button type="submit" class="btn btn-danger" role="button">Delete</button>
        </p>
    }

</div>