@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.UpdateTeamPokemonViewModel
@{
    Layout = "_layout";
}

@section scripts
{
    <script src="/js/createPokemonTeamDetail.js"></script>
}

<h2>Update Pokemon</h2>

<div class="form-horizontal">

    @using (Html.BeginForm(FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        @Html.HiddenFor(x => x.PokemonTeamDetail.Id);
        @Html.HiddenFor(x => x.PokemonTeamDetail.PokemonTeamEVId);
        @Html.HiddenFor(x => x.PokemonTeamDetail.PokemonTeamIVId);

        <div class="form-group row">
            @Html.LabelFor(x => x.PokemonTeamDetail.PokemonId, "Pokemon")
            @Html.DropDownListFor(x => x.PokemonTeamDetail.PokemonId, new SelectList(Model.AllPokemon, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PokemonTeamDetail.PokemonId)
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.PokemonTeamDetail.Nickname)
            @Html.EditorFor(x => x.PokemonTeamDetail.Nickname, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PokemonTeamDetail.Nickname)
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.PokemonTeamDetail.Gender)
            @Html.DropDownListFor(x => x.PokemonTeamDetail.Gender, new SelectList(Model.Genders), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PokemonTeamDetail.Gender)
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.PokemonTeamDetail.IsShiny, "Is Pokemon Shiny")
            @Html.CheckBoxFor(x => x.PokemonTeamDetail.IsShiny, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PokemonTeamDetail.IsShiny)
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.PokemonTeamDetail.AbilityId, "Ability")
            @Html.DropDownListFor(x => x.PokemonTeamDetail.AbilityId, new SelectList(Model.AllAbilities, "Id", "Name"), string.Empty, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PokemonTeamDetail.AbilityId)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Update</button>
        </p>
    }

</div>