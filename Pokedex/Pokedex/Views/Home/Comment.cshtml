@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.CommentViewModel
@{
    Layout = "_layout";
    ViewBag.Title = "Leave a Comment";
}

@section styles
{
    <style>
        .radioButton {
            margin: 5px 0;
        }
    </style>
}

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(x => x.CommentType, "What type of comment is this?")
            @foreach(var c in Model.TypeOfComment)
            {
                <div class="radioButton col-md-8">
                    @Html.RadioButtonFor(x => x.CommentType, c, new { @id = c.Replace(" ", "").Replace("(", "").Replace(")", "") + "Type" })
                    @Html.Label(c.Replace(" ", "").Replace("(", "").Replace(")", "") + "Type", c)
                </div>
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CommentedPage, "What page are you commenting on?")
            @foreach(var p in Model.Page)
            {
                <div class="radioButton">
                    <div class="col-md-8">
                        @Html.RadioButtonFor(x => x.CommentedPage, p, new { @id = p.Replace(" ", "").Replace("(", "").Replace(")", "") + "Page" })
                        @Html.Label(p.Replace(" ", "").Replace("(", "").Replace(")", "") + "Page", p)
                    </div>
                    @if(p == "Pokemon Page")
                    {
                        <div class="col-md-3">
                            @Html.EditorFor(x => x.PokemonName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    }
                </div>
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Submit Comment</button>
        </p>
    }

</div>