@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.CommentViewModel
@{
    Layout = "_layout";
}

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(x => x.CommentType, "What type of comment is this?")
            @foreach(var c in Model.TypeOfComment)
            {
                @Html.LabelFor(x => x.CommentType, c)
                @Html.RadioButtonFor(x => x.CommentType, c)
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CommentedPage, "What page are you commenting on?")
            @foreach(var p in Model.Page)
            {
                @Html.LabelFor(x => x.CommentedPage, p)
                @Html.RadioButtonFor(x => x.CommentedPage, p)
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.PokemonName, "If comment is on a pokemon, which Pokemon?")
            @Html.EditorFor(x => x.PokemonName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Submit Comment</button>
        </p>
    }

</div>