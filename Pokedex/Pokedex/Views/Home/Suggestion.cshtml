@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.Suggestion
@{
    Layout = "_layout";
}

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary()

        @Html.HiddenFor(x => x.Commentor)

        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Have a suggestion for the site?  Leave it here!")
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Submit Suggestion</button>
        </p>
    }

</div>