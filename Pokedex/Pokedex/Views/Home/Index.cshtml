@model Pokedex.AppConfig;
@{
    Layout = "_Layout";
}

@section scripts
{
    <script src="/js/modalImage.js"></script>
}

<h4>Welcome to the Pokemon Database!</h4>
<br>
<p>This was created starting as a school project and then eventually being transformed into a website.  Please Enjoy!</p>
<p><b>Please Note:</b> Information used for the Pokemon are updated to be in line with the most current generation of Pokemon.</p>
<p>Want to do more then just view Pokemon stats?  Explore other options!</p>
<div class="siteFeatures">
    <div class="feature teamRandomizerFeature">
        <a href="@Url.Action("TeamRandomizer", "Home")"><p>Randomize Teams!</p></a>
        <img class="modalPreview" data-modalUrl="@Url.Action("TeamRandomizer", "Home")" alt="Team Randomizer" title="Utilize the options in the dropdown menu to create a random Pokemon team!" src="@(@Model.WebUrl + @Model.GeneralImageUrl + "small/teamRandomizer.png")">
    </div>
    <div class="feature typeEvaluator">
        <a href="@Url.Action("TypingEvaluator", "Home")"><p>Lookup Type Combinations!</p></a>
        <img class="modalPreview" data-modalUrl="@Url.Action("TypingEvaluator", "Home")" alt="Typing Evaluator" title="Find out what Pokemon have a specific typing and what that type chart looks like!" src="@(@Model.WebUrl + @Model.GeneralImageUrl + "small/typingEvaluator.png")">
    </div>
    <div class="feature eggGroupEvaluator">
        <a href="@Url.Action("DayCareEvaluator", "Home")"><p>Lookup Day Care Combinations!</p></a>
        <img class="modalPreview" data-modalUrl="@Url.Action("DayCareEvaluator", "Home")" alt="Day Care Evaluator" title="Find out what Pokemon can be placed in a day care to produce a Pokemon Egg!" src="@(@Model.WebUrl + @Model.GeneralImageUrl + "small/dayCareEvaluator.png")">
    </div>
</div>
@if(!User.Identity.IsAuthenticated)
{
    <br>
    <p>If you're logged in, you have access to these!  <a href="@Url.Action("Login", "Account")">Login</a></p>
}
<div class="siteFeatures">
    <div class="feature teamBuilder">
        <a href="@Url.Action("PokemonTeams", "User")"><p>Build Teams!</p></a>
        <img class="modalPreview" data-modalUrl="@Url.Action("PokemonTeams", "User")" alt="Team Builder" title="Build different teams with the given options, or import them from Pokemon Showdown!  Once saved, you can export them to Showdown as well!" src="@(@Model.WebUrl + @Model.GeneralImageUrl + "small/pokemonTeams.png")">
    </div>
    <div class="feature shinyHunting">
        <a href="@Url.Action("ShinyHuntingCounter", "User")"><p>Hunt for Shiny Pokemon!</p></a>
        <img class="modalPreview" data-modalUrl="@Url.Action("ShinyHuntingCounter", "User")" alt="Shiny Hunting" title="Hunt for shiny Pokemon utilizing different hunting methods!" src="@(@Model.WebUrl + @Model.GeneralImageUrl + "small/shinyHunting.png")">
    </div>
</div>
</div>
<div class="modal">
    <span class="close">&times;</span>
    <h3 class="modalCaption"></h3>
    <h5 class="modalDescription"></h5>
    <a target="_blank" class="modalLink"><img class="modalImage"></a>
</div>