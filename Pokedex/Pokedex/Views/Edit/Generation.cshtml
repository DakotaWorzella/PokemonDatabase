@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.Generation
@{
    Layout = "_layout";
}

@section scripts
{
    <script>
        $(document).ready(function() {
            var releaseDate = $('#ReleaseDate').attr('value');
            var d = new Date(releaseDate);
            var day = d.getDate();
            var month = d.getMonth() + 1;
            var year = d.getFullYear();
            if (day < 10) {
                day = "0" + day;
            }
            if (month < 10) {
                month = "0" + month;
            }
            var date = year + "-" + month + "-" + day;

            $('#ReleaseDate').val(date);
        });
    </script>
}

<h2>Update Generaiton</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {        
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        <div class="form-group row">
            @Html.LabelFor(x => x.Region, new { @class = "col-md-2" })
            @Html.EditorFor(x => x.Region, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.Region)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Save</button>
        </p>
    }

</div>