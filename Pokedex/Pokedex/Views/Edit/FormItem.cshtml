@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.FormItem
@{
    Layout = "_layout";
}

<h2>Update Form Item</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {        
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)

        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.PokemonId)
            @Html.EditorFor(x => x.PokemonId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.PokemonId)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Save</button>
        </p>
    }

</div>