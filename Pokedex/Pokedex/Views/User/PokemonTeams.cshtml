@model Pokedex.Models.PokemonTeamsViewModel;
@{
    Layout = "_Layout";
}

<p>
    <a class="btn btn-primary" href="@Url.Action("CreateTeam", "PokemonTeam")" role="button">Create New Team</a>
</p>

<div>
    @if (Model.AllPokemonTeams.ToList().Count > 0)
    {
        <table class="table pokemonTeam">
            <tbody>
                <tr>
                    <th scope="col">Team Name</th>
                    <th scope="col">
                        Game@{
                            foreach(var team in Model.AllPokemonTeams)
                            {
                                if (team.Generation.Games.Contains('/'))
                                {
                                    @("(s)");
                                    break;
                                }
                            }
                        }
                    </th>
                    <th scope="col">Pokemon</th>
                    <th scope="col">Actions</th>
                </tr>
                @foreach(var teams in Model.AllPokemonTeams)
                {
                    <tr>
                        <td>@teams.PokemonTeamName</td>
                        <td>@teams.Generation.Games</td>
                        <td>
                            <table class="pokemonTeamPokemonTable">
                                <tbody>
                                    <tr>
                                        <td>
                                            @if(@teams.FirstPokemon != null)
                                            {
                                                <a href="@Url.Action("EditPokemon", "PokemonTeam", new { pokemonTeamDetailId = @teams.FirstPokemon.Id })">
                                                    <img class="lightshadowed pokemonTeamPokemon" title="@teams.FirstPokemon.Pokemon.Name.Replace('_', ' ')@((@teams.FirstPokemon.Nickname != null) ? " (" + @teams.FirstPokemon.Nickname + ")" : "")")" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @teams.FirstPokemon.Pokemon.Id + ".png")" />
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("CreatePokemon", "PokemonTeam", new { teamId = @teams.Id })">
                                                    <img class="lightshadowed addButton" title="Add Pokemon" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/general/addButton.png")" />
                                                </a>
                                            }
                                            @if(@teams.SecondPokemon != null)
                                            {
                                                <a href="@Url.Action("EditPokemon", "PokemonTeam", new { name = @teams.SecondPokemon.Id })">
                                                    <img class="lightshadowed pokemonTeamPokemon" title="@teams.SecondPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @teams.SecondPokemon.Pokemon.Id + ".png")" />
                                                </a>
                                            }
                                            else if(@teams.FirstPokemon != null)
                                            {
                                                <a href="@Url.Action("CreatePokemon", "PokemonTeam", new { teamId = @teams.Id })">
                                                    <img class="lightshadowed addNextButton" title="Add Pokemon" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/general/addButton.png")" />
                                                </a>
                                            }
                                            @if(@teams.ThirdPokemon != null)
                                            {
                                                <a href="@Url.Action("EditPokemon", "PokemonTeam", new { name = @teams.ThirdPokemon.Id })">
                                                    <img class="lightshadowed pokemonTeamPokemon" title="@teams.ThirdPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @teams.ThirdPokemon.Pokemon.Id + ".png")" />
                                                </a>
                                            }
                                            else if(@teams.SecondPokemon != null)
                                            {
                                                <a href="@Url.Action("CreatePokemon", "PokemonTeam", new { teamId = @teams.Id })">
                                                    <img class="lightshadowed addNextButton" title="Add Pokemon" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/general/addButton.png")" />
                                                </a>
                                            }
                                            @if(@teams.FourthPokemon != null)
                                            {
                                                <a href="@Url.Action("EditPokemon", "PokemonTeam", new { name = @teams.FourthPokemon.Id })">
                                                    <img class="lightshadowed pokemonTeamPokemon" title="@teams.FourthPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @teams.FourthPokemon.Pokemon.Id + ".png")" />
                                                </a>
                                            }
                                            else if(@teams.ThirdPokemon != null)
                                            {
                                                <a href="@Url.Action("CreatePokemon", "PokemonTeam", new { teamId = @teams.Id })">
                                                    <img class="lightshadowed addNextButton" title="Add Pokemon" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/general/addButton.png")" />
                                                </a>
                                            }
                                            @if(@teams.FifthPokemon != null)
                                            {
                                                <a href="@Url.Action("EditPokemon", "PokemonTeam", new { name = @teams.FifthPokemon.Id })">
                                                    <img class="lightshadowed pokemonTeamPokemon" title="@teams.FifthPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @teams.FifthPokemon.Pokemon.Id + ".png")" />
                                                </a>
                                            }
                                            else if(@teams.FourthPokemon != null)
                                            {
                                                <a href="@Url.Action("CreatePokemon", "PokemonTeam", new { teamId = @teams.Id })">
                                                    <img class="lightshadowed addNextButton" title="Add Pokemon" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/general/addButton.png")" />
                                                </a>
                                            }
                                            @if(@teams.SixthPokemon != null)
                                            {
                                                <a href="@Url.Action("EditPokemon", "PokemonTeam", new { name = @teams.SixthPokemon.Id })">
                                                    <img class="lightshadowed pokemonTeamPokemon" title="@teams.SixthPokemon.Pokemon.Name.Replace('_', ' ')" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/pokemon/" + @teams.SixthPokemon.Pokemon.Id + ".png")" />
                                                </a>
                                            }
                                            else if(@teams.FifthPokemon != null)
                                            {
                                                <a href="@Url.Action("CreatePokemon", "PokemonTeam", new { teamId = @teams.Id })">
                                                    <img class="lightshadowed addNextButton" title="Add Pokemon" src="@Url.Content(@Model.AppConfig.WebUrl + "/images/general/addButton.png")" />
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                        <td>
                            <a class="btn btn-primary" title="Edit @teams.PokemonTeamName" href="@Url.Action("EditTeam", "PokemonTeam", new { teamId = @teams.Id })">Edit Team</a>
                            <button class="btn btn-primary" title="Export @teams.PokemonTeamName">Export Team</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="noPokemonTeams">No teams have been created yet.</div>
    }
</div>