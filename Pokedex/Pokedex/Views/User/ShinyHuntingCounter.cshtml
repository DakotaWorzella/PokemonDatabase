@model Pokedex.Models.ShinyHuntingViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Shiny Hunts";
    int huntCount;
}

@section styles
{
    <link href="/css/pageLookup.css" rel="stylesheet" type="text/css" />
}

@section scripts
{
    <script src="/js/pageLookup.js"></script>
}

<p>
    <a class="btn btn-primary" href="@Url.Action("BeginShinyHunt", "User")" role="button">Begin Shiny Hunt</a>
</p>
<div class="pageButtons">
    <button class="huntsInProgress active" onclick="lookupPage('huntsInProgress')">Hunts In Progress</button>
    <button class="huntsCompleted" onclick="lookupPage('huntsCompleted')">Hunts Completed</button>
    <button class="huntsFailed" onclick="lookupPage('huntsFailed')">Hunts Failed</button>
</div>
<div class="page active" id="huntsInProgress">
    @if (Model.InProgressHunts.Count > 0)
    {
        huntCount = 0;
        <table class="table pokemonHunt huntInProgressTable">
            <tbody>
                <tr>
                    <th scope="col">Pokemon</th>
                    <th scope="col">
                        Game@{
                            foreach(var hunt in Model.InProgressHunts)
                            {
                                if (hunt.Game.Name.Contains('/'))
                                {
                                    @("(s)");
                                    break;
                                }
                            }
                        }
                    </th>
                    <th scope="col">Technique</th>
                    @{
                        foreach(var hunt in Model.InProgressHunts)
                        {
                            if (hunt.Game.ReleaseDate >= new DateTime(2012, 10, 7))
                            {
                                <th scope="col">Used Shiny Charm</th>
                                break;
                            }
                        }
                    }
                    <th scope="col">Number of Attempts</th>
                    <th scope="col">Actions</th>
                </tr>
                @foreach(var hunts in Model.InProgressHunts)
                {
                    huntCount++;
                    <tr>
                        <td>@hunts.Pokemon.Name</td>
                        <td>@hunts.Game.Name</td>
                        <td>@hunts.ShinyHuntingTechnique.Name</td>
                        @{
                            foreach(var hunt in Model.InProgressHunts)
                            {
                                if (hunt.Game.ReleaseDate >= new DateTime(2012, 10, 7))
                                {
                                    <td>@(@hunts.HasShinyCharm ? "Yes" : "No")</td>
                                    break;
                                }
                            }
                        }
                        <td>@hunts.ShinyAttemptCount</td>
                        <td>
                            <a href="@Url.Action("ContinueHunt", "User", new { huntId = @huntCount })">@(hunts.ShinyAttemptCount == 0 ? "Begin Hunt" : "Continue Hunt")</a>
                            |
                            <a href="@Url.Action("RemoveHunt", "User", new { huntId = @huntCount, huntProgress="InProgress" })">Delete Hunt</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="noPokemonHunting">No Pok√©mon are being hunted right now.</div>
    }
</div>
