@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.EndShinyHuntViewModel
@{
    Layout = "_layout";
}

<h2>End Shiny Hunt</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        @Html.HiddenFor(x => x.ShinyHuntId)

        <div class="form-group row">
            @Html.LabelFor(x => x.HuntSuccessful, "Was Hunt Successful:", new { @class = "col-md-2" })
            @Html.CheckBoxFor(x => x.HuntSuccessful, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.HuntSuccessful)
        </div>

        <p>
            <button type="submit" class="btn btn-success" role="button">Finish Hunt</button>
        </p>
    }

</div>