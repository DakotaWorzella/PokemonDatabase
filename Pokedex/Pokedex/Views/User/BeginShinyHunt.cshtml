@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.BeginShinyHuntViewModel
@{
    Layout = "_layout";
}

<h2>Begin Shiny Hunt</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        @Html.HiddenFor(x => x.UserId)

        <div class="form-group">
            @Html.LabelFor(x => x.ShinyHuntingTechniqueId):
            @Html.DropDownListFor(x => x.ShinyHuntingTechniqueId, new SelectList(Model.AllShinyHuntingTechniques, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ShinyHuntingTechniqueId)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.PokemonId):
            @Html.DropDownListFor(x => x.PokemonId, new SelectList(Model.AllPokemon, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PokemonId)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.GenerationId):
            @Html.DropDownListFor(x => x.GenerationId, new SelectList(Model.AllGenerations, "Id", "Games"), new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.HasShinyCharm):
            @Html.CheckBoxFor(x => x.HasShinyCharm, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HasShinyCharm)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    }

</div>