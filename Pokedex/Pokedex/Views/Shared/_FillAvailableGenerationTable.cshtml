@model Pokedex.Models.GenerationTableViewModel;

@foreach(var p in Model.PokemonNoTypeList)
{
    <div class="@p.Name">
        @if(p.IsComplete)
        {
            @if(p.Name.IndexOf(" (") > -1)
            {
                <a href="@Url.Action("Pokemon", "Home", new { name = p.Name.Substring(0, p.Name.IndexOf(" (")).Replace(": ", "_").Replace(' ', '_').ToLower() })">
                    <img class="pokemonlistPicture" title="@p.Name.Replace('_', ' ')", src="@Url.Content(@Model.AppConfig.PokemonImageUrl + @p.Id + ".png")">
                </a>
            }
            else
            {
                <a href="@Url.Action("Pokemon", "Home", new { name = p.Name.Replace(": ", "_").Replace(' ', '_').ToLower() })">
                    <img class="pokemonlistPicture" title="@p.Name.Replace('_', ' ')", src="@Url.Content(@Model.AppConfig.PokemonImageUrl + @p.Id + ".png")">
                </a>
            }
        }
        else
        {
            <img class="pokemonlistPicture" title="@p.Name.Replace('_', ' ')", src="@Url.Content(@Model.AppConfig.PokemonImageUrl + @p.Id + ".png")">
        }
        <div class="description">
            <span class="pokemonName">#@p.PokedexNumber.ToString().PadLeft(3, '0') @p.Name.Replace('_', ' ')</span>
        </div>
    </div>
}