@model Pokedex.Models.GenerationTableViewModel;
@{
    string pokemonImageUrl;
}

@foreach(var p in Model.PokemonList)
{
    @if(Model.ShowSprites)
    {
        pokemonImageUrl = Model.AppConfig.WebUrl + Model.AppConfig.SpriteImageUrl + @p.PokemonId + ".png";
    }
    else
    {
        pokemonImageUrl = Model.AppConfig.WebUrl + Model.AppConfig.PokemonImageUrl + @p.PokemonId + ".png";
    }
    <div class="shadowed @p.Pokemon.Name">
        <a href="@Url.Action("Pokemon", "Home", new { name = p.Pokemon.Name.Replace(": ", "_").Replace(' ', '_').ToLower() })">
            <img class="pokemonlistPicture" title="@p.Pokemon.Name" src="@Url.Content(@pokemonImageUrl)">
        </a>
        <div class="description">
            <a class="pokemonName" href="@Url.Action("Pokemon", "Home", new { name = p.Pokemon.Name.Replace(": ", "_").Replace(' ', '_').ToLower() })">#@p.Pokemon.PokedexNumber.ToString().PadLeft(3, '0') @p.Pokemon.Name</a>
            <div class="typing">
                <div class="pokemon-type type-icon type-@p.PrimaryType.Name.ToLower()">@p.PrimaryType.Name</div>
                @if(p.SecondaryType != null)
                {
                    <div class="pokemon-type type-icon type-@p.SecondaryType.Name.ToLower()">@p.SecondaryType.Name</div>
                }
            </div>
        </div>
    </div>
}