<ul class="navbar-nav search-bar">
    <li>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" } ))
        {
            <div class="form-group mb-2">
                @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" }, @Value = @ViewData["Search"] })
            </div>
            <div class="form-group mx-sm-2 mb-2">
                <button type="submit" class="btn btn-secondary search-button" role="button">Search</button>
            </div>
            @if(ViewData["Search"] != null)
            {
                <div class="form-group mb-2">
                    <a href="@(Url.Action("AllPokemon", "Home"))" class="btn btn-outline-secondary reset-button" role="button">Reset</a>
                </div>
            }
        }
    </li>
</ul>