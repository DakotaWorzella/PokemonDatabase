<ul class="navbar-nav search-bar">
    <li>
        @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-inline" } ))
        {
            <div style="margin-right: 7.5px;" class="form-group mb-2">
                @Html.Editor("search", new { htmlAttributes = new { @class = "form-control", @list = "pokemonList", @autocomplete = "off" }, @Value = @ViewData["Search"] })
            </div>
            <div style="margin-top: -1px;" class="form-group mb-2">
                <button type="submit" class="btn btn-secondary search-button" role="button">Search</button>
                @if(ViewData["Search"] != null)
                {
                    <a href="@(Url.Action("AllPokemon", "Home"))" class="btn btn-outline-secondary reset-button" role="button">Reset</a>
                }
            </div>
        }
    </li>
</ul>